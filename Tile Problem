class Main {

    public static int ways(int n) {
        if (n == 0) return 1;
        if (n < 0) return 0;
        if (n == 1)return 1;
        if (n == 2)return 1;
        if (n == 3) return 1;
        if (n == 4) return 2;

        
        return ways(n - 1) + ways(n - 4);
    }

    public static void main(String[] args) {
        int n = 7;
        System.out.println("Ways = " + ways(n));
    }
}
