class Solution {
    private void helper(int index,int[] candidates,int target,List<Integer>current,List<List<Integer>> ans){

        if(target==0){
            ans.add(new ArrayList<>(current));
            return;
        }

        if(index==candidates.length||target<0){
            return;
        }

        current.add(candidates[index]);
        helper(index,candidates,target-candidates[index],current,ans);
        current.remove(current.size()-1);
        helper(index+1,candidates,target,current,ans);
        
    }
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        List<List<Integer>> ans=new ArrayList<>();
        helper(0,candidates,target,new ArrayList<>(),ans);
        return ans;
    }
}
